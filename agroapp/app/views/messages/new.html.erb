<!doctype html>
<html>
<head>
<%= stylesheet_link_tag 'http://www.agro.com/application.css' %>

	<title>New Note</title>
</head>
<body>
	<div class="pagetop">
		<div class="pagetop_pic">
			<%= link_to image_tag("http://i.imgur.com/ii4SpRt.jpg"), '/index' %>
		</div>
		<% if current_user %>
		<ul>
			<li><%= link_to "Log out", logout_path, method: "delete" %></li>
			<li><%= link_to "My Information", '/secure' %></li>
			<li><%= link_to "Home", '/index' %></li>
			<li><%= link_to "Contact Us", '/contactus' %></li>
			<li><%= link_to "About Us", '/aboutus' %></li>
			<li><%= link_to "Services", '/services' %></li>
			<li><%= link_to "Our Staff", '/ourstaff' %></li>
			<li><%= link_to "Weather", '/weather' %></li>
			<li><%= link_to "Resources", '/Resources' %></li>
			<li><%= link_to "IPM Links", '/ipmlinks' %></li>
		</ul>
		<% else %>
		<ul>
			<li><a href="clientlogin.html">Client Login</a></li>
			<li><%= link_to "Home", '/index' %></li>
			<li><%= link_to "Contact Us", '/contactus' %></li>
			<li><%= link_to "About Us", '/aboutus' %></li>
			<li><%= link_to "Services", '/services' %></li>
			<li><%= link_to "Our Staff", '/ourstaff' %></li>
			<li><%= link_to "Weather", '/weather' %></li>
			<li><%= link_to "Resources", '/Resources' %></li>
			<li><%= link_to "IPM Links", '/ipmlinks' %></li>
		</ul>
		<% end %>
	</div>
	<% if @farm_login != "agro" %>
	<div class= "formformatting">
	<%= form_for(@message) do |f| %> 
	<%= f.label :grower %><br>
	<%= f.text_field :grower, :value => "#{@farm_login}", :readonly => true %><br>
	<%= f.label :message %><br> 
	<%= f.text_area :content %><br>
	<%= f.label :author %><br>
    	<%= f.text_field :author %><br> 
   	 <%= f.submit "Create" %> 
  	</div> 
	<% end %>
	<% else %>
	<div class= "formformatting">
	<%= form_for(@message) do |f| %> 
	<%= f.label :grower %><br>
	<%= f.text_field :grower, :placeholder => "Enter Farm Login Here." %><br>
	<%= f.label :message %><br> 
	<%= f.text_area :content %><br>
	<%= f.label :author %><br>
    	<%= f.text_field :author %><br> 
   	 <%= f.submit "Create" %> 
	<% end %>
	<% end %>
	<div class="footer">
		<div class="container_footer">
			<div>
				<ul>
					<p> Copyright Agro Engineering Inc. 2016</p>
				</ul>
			</div>
		</div>
	</div>
</body>
