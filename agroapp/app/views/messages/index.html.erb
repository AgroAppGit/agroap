			<li><%= link_to "IPM Links", '/ipmlinks' %></li>
		</ul>
		<% end %>
	</div>
 	<div >
	<% @messages.each do |f| %> 
	<div> 
	<div>
			<span id = "message_farm_name"><%= f.grower %></span><br>
  			<span id = "message_content_agro"><%= f.content %><span><br>
			<span id = "message_author"><%= "--"+f.author %></span><br>
			<span id = "message_create_time"><%= f.created_at %></span><br>
	<%= link_to "Delete this Message", f, method: :delete %><br><br>
	</div> 
	<% end %>
	<%= link_to "Back to Agro Dashboard", '/app/public/agro' %>
	</div>
	<div class="footer">
		<div class="container_footer">
