<!doctype html>
<html>
<head>

	<title>Client Login</title>
</head>
<body>
	<div class="pagetop">
		<div class="pagetop_pic">
			<a href="index.html"><img src="http://i.imgur.com/ii4SpRt.jpg" /></a>
		</div>
	</div>
	<% if @farm_login != "agro" %>
 	<% @farm_id = request.fullpath %>
	<% @farm_id[0..11] = '' %>
	<div id = "mobilefarm_header"><%= "#{@farm_login}" %></div>
	<div class = "linkandmessagearea">
	<div class= "mobileinformationlinkstyle">
	<h1 id = "informationheader">Information</h1>
	<h2 id = "informationheader">Irrigation and ET Data</h2>
	<h3 id = "informationsubheader">Crop Water Use Summary</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/CropWaterUseSummary*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h3 id = "informationsubheader">Weekly Irrigation Schedule</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/sched*").each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h3 id = "informationsubheader">Irrigation Summary</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/sum*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h2 id = "informationheader">Crop and Soil Fertility</h2>
	<h3 id = "informationsubheader">Petioles</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/*Anp.pdf").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/*micro.pdf").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h3 id = "informationsubheader">Fertility Recommendations</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/*FertilityRecommendation.pdf").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/*FarmSummary.pdf").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/*FertilizerMaterials").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h2 id = "informationheader">Nematode and Soil Disease Results</h2>
	<h3 id = "informationsubheader">Nematodes</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/Nema*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	<% Dir.glob("app/public/#{@farm_login}/nema*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h2 id = "informationheader">Aerials</h2>
	<h3 id = "informationsubheader">Crop Health</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/CHI*").sort.each do |f| %>
	<li><%=image_tag("#{f}", size: "240")%></li>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h3 id = "informationsubheader">Infrareds</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/FCIR*").sort.each do |f| %>
	<li><%=image_tag("#{f}", size: "240")%></li>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h2 id = "informationheader">Irrigation System Design</h2>
	<h3 id = "informationsubheader">Percent Charts</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/PChart*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h3 id = "informationsubheader">Nozzle Charts</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/Nozzle*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h3 id = "informationheader">Engineering</h3>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/Engi*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	<% Dir.glob("app/public/#{@farm_login}/engi*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h2 id = "informationsubheader">Field Notes</h2>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/Note*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	<% Dir.glob("app/public/#{@farm_login}/note*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	<h2 id = "informationheader">Recommendations</h2>
	<ul>
	<% Dir.glob("app/public/#{@farm_login}/Rec*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	<% Dir.glob("app/public/#{@farm_login}/rec*").sort.each do |f| %>
	<li><%= link_to "#{f}", f[/\/.*/] %></li>
	<% end %>
	</ul>
	</div>

	<div class= "mobilemessagearea">
 	<p class= "mobilenewnotelink"><%= link_to "Write a note", '/messages/new' %></p>
	<% message_limit = 1 %>
	<% @messages.each do |f| %> 
			<% if (f.grower == "#{@farm_login}" || f.grower == "allgrowers") && message_limit <10 %>
			<div class= "mobilemessagearealoop">
  			<p><%= f.content %><br>
			<span id = "message_author"><%= "--"+f.author %></span><br>
			<span id = "message_create_time"><%= f.created_at %></span>
			</p>
			</div>
			<% message_limit += 1 %>
			<% else%>
			<%= "" %>
			<% end %>
	<% end %>
	<% else %>
	<p><%= "" %></p>
	<% end %>
	<div class="footer">
		<div class="container_footer">
			<div>
				<ul>
					<p> Copyright Agro Engineering Inc. 2016</p>
				</ul>
			</div>
		</div>
	</div>
</body>
